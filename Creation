-- LOAD RAYFIELD UI
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- CREATE WINDOW WITH AMBER GLOW THEME
local Window = Rayfield:CreateWindow({
    Name = "Sightseeing76's collection",
    LoadingTitle = "Loading...",
    LoadingSubtitle = "Sightseeing76's",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "Sightseeing76's collection",
        FileName = "Settings"
    },
    Discord = {
        Enabled = false,
        Invite = "yourinvitecode",
        RememberJoins = true
    },
    KeySystem = false,
    Theme = "AmberGlow"
})

-- CREATE FORSAKEN TAB
local ForsakenTab = Window:CreateTab("Forsaken", 4483362458)

-- AUTO BACKSTAB BUTTON
ForsakenTab:CreateButton({
    Name = "Auto Backstab",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/skibidi399/Auto-backstab-two-time/refs/heads/main/Auto%20backstab%20v2"))();
    end
})

-- OP BUTTON
ForsakenTab:CreateButton({
    Name = "OP",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/BobJunior1/ForsakenBoi/refs/heads/main/B0bbyHub"))();
    end
})

-- AUTO BLOCK BUTTON (UPDATED VERSION)
ForsakenTab:CreateButton({
    Name = "Auto Block (Excludes Jason M1'A & Coolkid M1)",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/franciscokile3-creator/Auto-block-update-/refs/heads/main/Auto%20block"))();
    end
})

-- RINGTA BUTTON
ForsakenTab:CreateButton({
    Name = "Ringta",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/wefwef127382/forsakenloader.github.io/refs/heads/main/RINGTABUBLIK.lua"))()
    end
})

-- CREATE DOORS TAB
local DoorsTab = Window:CreateTab("Doors", 4483362460) -- Replace with your preferred icon ID

-- SENSATION BUTTON
DoorsTab:CreateButton({
    Name = "Sensation",
    Callback = function()
        loadstring(game:HttpGet("https://rawscripts.net/raw/FLOOR-2-DOORS-Sensation-V2-20105"))()
    end
})

-- CREATE RAYFIELD TAB
local RayfieldTab = Window:CreateTab("Rayfield", 4483362444) -- You can change icon ID

-- ANTISTUN BUTTON
RayfieldTab:CreateButton({
    Name = "Antistun",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/franciscokile3-creator/Antistun/refs/heads/main/Antistun"))()
    end
})

-- RAYFIELD INFO BUTTON
RayfieldTab:CreateButton({
    Name = "UI Reload",
    Callback = function()
        Rayfield:Destroy() -- Destroys the current UI
        loadstring(game:HttpGet('https://sirius.menu/rayfield'))() -- Reload Rayfield
    end
})

-- RAYFIELD CREDITS
RayfieldTab:CreateButton({
    Name = "Credits",
    Callback = function()
        print("Rayfield UI made by Sirius | Script collection by Sightseeing76")
    end
})
