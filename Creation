-- LOAD RAYFIELD UI
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- CREATE WINDOW WITH AMBER GLOW THEME
local Window = Rayfield:CreateWindow({
    Name = "Sightseeing76's collection",
    LoadingTitle = "Loading...",
    LoadingSubtitle = "Sightseeing76's",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "Sightseeing76's collection",
        FileName = "Settings"
    },
    Discord = {
        Enabled = false,
        Invite = "yourinvitecode",
        RememberJoins = true
    },
    KeySystem = false,
    Theme = "AmberGlow"
})

